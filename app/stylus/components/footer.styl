footer
	width: 100%
	background-color: #1e1e1e
	color: black
	position: absolute
	bottom: 0
	overflow: hidden
	height: 100px
	display: flex
	.footerImage
		height: 100%
		display: inline-flex
		align-items: center
		img
			height: 90%
	.footerContact
		align-self: center
		position: absolute
		right: 50px
		color: #f5f5f5
		.address, .phone
			margin: 15px 0
			text-align: right
		a
			color: inherit
			text-decoration: none
	.socialButtons
		display: flex
		justify-content: center
		flex-wrap: wrap
		width: 120px
		margin: 10px auto 0
		h6
			margin: 0 0 2px 0
			padding: 0px
			text-align: center
			width: 100%
			font-size: 14px
			font-family: Roboto
			font-weight: 300
			color: black
			order: 0
		img
			height: 32px
			width: 32px
			margin: 0 2px
			filter: grayscale(1)
			transition: filter 0.2s
			order: 1
			&:hover
				filter: grayscale(0)
		.copyright
			width: 100%
			text-align: center
			font-family: Roboto
			font-size: 12px
			font-weight: 300
			color: black
			margin-top: 2px
			order: 2
