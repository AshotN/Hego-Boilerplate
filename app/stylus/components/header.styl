header
	width: 100%
	height: 150px
	background-color: white
	display: flex
	align-items: center
	justify-content: space-around
	.headerPadding
		width: 700px
	.headerImage
		height: 80%
		padding: 0 20px
		img
			height: 100%

	.navContainer
		font-family: Open Sans, sans-serif
		font-size: 18px
		height: 100%
		display: flex
		align-items: center
		width: 700px
		justify-content: right
		nav
			list-style: none
			display: flex
			font-size: 24px
			white-space: nowrap
			a
				margin: 0 10px
				color: black
				text-decoration: none
				border-bottom: 1px solid #afafaf
				transition: 0.2s padding, color
				outline: none
				&:hover, &.active
					padding: 0 5px
					color: #0365a8
					border-bottom: 1px solid #0365a8


@media only screen and (max-width: 860px)
	header
		height: auto
		justify-content: center
		flex-wrap: wrap
		.image
			height: 120px
			padding: 20px 0
		.padding
			display: none
		.navContainer
			nav
				flex-direction: column
				width: 100%